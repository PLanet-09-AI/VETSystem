@model IEnumerable<BestReg.Data.InventoryItem>

<h2>Supplier Inventory Management</h2>

<a href="/SupplierOrders/Create" class="btn btn-primary">New Order</a>

<table class="table">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Price per Unit</th>
            <th>Quantity in Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.PricePerUnit</td>
                <td>@item.QuantityInStock</td>
                <td>
                    <a href="/InventoryItems/Edit/@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/InventoryItems/Delete/@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
